<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="5"
        android:entries="@array/snooze_values"
        android:entryValues="@array/snooze_values"
        android:key="alarm_snooze"
        android:title="@string/pref_title_snooze"/>

    <RingtonePreference
        android:defaultValue="content://settings/system/notification_sound"
        android:key="alarm_ringtone"
        android:ringtoneType="alarm"
        android:title="@string/pref_title_ringtone" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="alarm_enable_questions"
        android:title="@string/pref_title_questions" />

</PreferenceScreen>
